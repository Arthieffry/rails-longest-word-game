
<h1>Tente ta chance, Jacky(ie) :</h1>
<div id="letters">
<%@grid.each do |letter|  %>
  <div class="letter"><%= letter %></div>
<% end %>
</div>

<form action="/score">
  <input type="hidden" name="grid" value="<%= @grid.join %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="text" id="attempt" name="attempt" class="form-control" placeholder="Entrez votre mot">
  <input type="submit" class="btn btn-primary button" value="Lets go!">
</form>
